<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-extend="PaymentScreen-Paymentlines">
        <t t-jquery="tr.label" t-operation="replace">
            <tr class="pos_label">
                <th>Due</th>
                <th>Tendered</th>
                <th>Change</th>
                <th>Method</th>
                <th></th>
            </tr>
        </t>
    </t>
    <t t-extend="ClientListScreenWidget">
        <t t-jquery="tr" t-operation="append">
            <t t-if="widget.pos.config.enable_pos_loyalty">
                <th>Loyalty Points</th>
            </t>
        </t>
    </t>
    <t t-extend="ClientLine">
        <t t-jquery="tr.client-line" t-operation="append">
            <t t-if="widget.pos.config.enable_pos_loyalty">
                <td>
                    <t t-if='partner.total_remaining_points'>
                        <span class='detail client-loyalty'  style="padding-left:34px;"><t t-esc='partner.total_remaining_points'/></span>
                    </t>
                </td>
            </t>
        </t>
    </t>
</templates>


